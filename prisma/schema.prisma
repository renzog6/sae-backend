enum TireEventType {
  ASSIGNMENT
  UNASSIGNMENT
  ROTATION
  INSPECTION
  RECAP
  DISCARD
  OTHER
}

// --- MODELOS PRINCIPALES ---

// üìè MEDIDA gen√©rica del neum√°tico
model TireSize {
  id          Int      @id @default(autoincrement())
  mainCode    String   @unique @db.VarChar(25) // Ej: "380/90R46"
  width       Int? // 380
  aspectRatio Int? // 90
  rimDiameter Decimal? @db.Decimal(4, 1) // 46
  information String? // Notas t√©cnicas, 

  aliases TireSizeAlias[]
  models  TireModel[]

  @@map("tire_sizes")
}

// üîÑ Alias alternativos para la misma medida
model TireSizeAlias {
  id         Int      @id @default(autoincrement())
  aliasCode  String   @unique @db.VarChar(25) // Ej: "14.9R46"
  tireSizeId Int
  tireSize   TireSize @relation(fields: [tireSizeId], references: [id])

  @@index([tireSizeId])
  @@map("tire_size_aliases")
}

// üß© MODELO comercial de neum√°tico (marca + caracter√≠sticas t√©cnicas)
model TireModel {
  id           Int     @id @default(autoincrement())
  brandId      Int
  sizeId       Int
  name         String  @db.VarChar(50) // Ej: "Agribib"
  construction String? // "R" (Radial), "D" (Diagonal)
  loadIndex    Int?
  speedSymbol  String? // Ej: "A8", "B", "L"
  plyRating    String? // Ej: "8PR"
  treadPattern String? // Ej: "R-1W", "LSW", etc.
  information  String? // Notas t√©cnicas, presi√≥n recomendada, etc.

  brand Brand    @relation(fields: [brandId], references: [id])
  size  TireSize @relation(fields: [sizeId], references: [id])
  tires Tire[]

  @@index([brandId])
  @@index([sizeId])
  @@map("tire_models")
}

// üîπ NEUM√ÅTICO f√≠sico individual
model Tire {
  id           Int           @id @default(autoincrement())
  serialNumber String        @unique
  modelId      Int
  position     TirePosition?
  status       TireStatus    @default(IN_STOCK)
  totalKm      Int?          @default(0)
  recapCount   Int           @default(0) // DENORMALIZACI√ìN: n¬∫ total recapados
  lastRecapAt  DateTime? // denormalizaci√≥n para consultas r√°pidas
  lastRecapId  Int? // FK opcional al √∫ltimo TireRecap
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  model TireModel @relation(fields: [modelId], references: [id])

  assignments TireAssignment[]
  rotations   TireRotation[]
  recaps      TireRecap[]
  inspections TireInspection[]
  events      TireEvent[]

  @@index([modelId])
  @@map("tires")
}

// üìç Asignaci√≥n del neum√°tico a un equipo
model TireAssignment {
  id               Int       @id @default(autoincrement())
  tireId           Int
  positionConfigId Int // referencia a TirePositionConfig
  startDate        DateTime  @default(now())
  endDate          DateTime?
  kmAtStart        Int?
  kmAtEnd          Int?

  tire           Tire               @relation(fields: [tireId], references: [id])
  positionConfig TirePositionConfig @relation(fields: [positionConfigId], references: [id])

  @@index([tireId])
  @@index([positionConfigId])
  @@map("tire_assignments")
}

// üîÅ Rotaciones entre posiciones o equipos
model TireRotation {
  id              Int           @id @default(autoincrement())
  tireId          Int
  fromEquipmentId Int?
  toEquipmentId   Int?
  fromPosition    TirePosition?
  toPosition      TirePosition?
  rotationDate    DateTime      @default(now())
  kmAtRotation    Int?

  tire Tire @relation(fields: [tireId], references: [id])

  @@index([tireId])
  @@map("tire_rotations")
}

// üîß Registro de recapados
model TireRecap {
  id          Int      @id @default(autoincrement())
  tireId      Int
  provider    String?  @db.VarChar(100)
  recapDate   DateTime @default(now())
  cost        Decimal? @db.Decimal(10, 2)
  notes       String?
  recapNumber Int      @default(1)
  kmAtRecap   Int? // Muy importante: kms acumulados al momento del recap
  recapType   String? // Ej: "full", "partial", "delamination_repair"
  createdBy   Int? // userId que realiz√≥ el registro
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tire Tire @relation(fields: [tireId], references: [id])

  @@index([tireId])
  @@map("tire_recaps")
}

// üîç Inspecciones peri√≥dicas
model TireInspection {
  id             Int      @id @default(autoincrement())
  tireId         Int
  inspectionDate DateTime @default(now())
  pressure       Decimal? @db.Decimal(5, 2)
  treadDepth     Decimal? @db.Decimal(5, 2)
  observation    String?

  tire Tire @relation(fields: [tireId], references: [id])

  @@index([tireId])
  @@map("tire_inspections")
}

// üïì Historial de eventos (timeline)
model TireEvent {
  id          Int           @id @default(autoincrement())
  tireId      Int
  eventType   TireEventType
  eventDate   DateTime      @default(now())
  userId      Int?
  description String?
  metadata    String? // JSON string con detalles extra
  createdAt   DateTime      @default(now())

  tire Tire @relation(fields: [tireId], references: [id])

  @@index([tireId])
  @@index([eventType])
  @@map("tire_events")
}

model EquipmentAxle {
  id          Int      @id @default(autoincrement())
  equipmentId Int
  order       Int // Eje 1, Eje 2, etc.
  axleType    AxleType
  wheelCount  Int
  description String?

  equipment     Equipment            @relation(fields: [equipmentId], references: [id])
  tirePositions TirePositionConfig[]

  @@index([equipmentId])
  @@map("equipment_axles")
}

model TirePositionConfig {
  id          Int      @id @default(autoincrement())
  axleId      Int
  positionKey String // Ej: "E1I", "E1D", "E2II", etc.
  side        TireSide
  isDual      Boolean  @default(false)

  axle        EquipmentAxle    @relation(fields: [axleId], references: [id])
  assignments TireAssignment[]

  @@index([axleId])
  @@map("tire_position_configs")
}

enum AxleType {
  FRONT
  DRIVE
  TRAILER
  TAG
}

enum TireSide {
  LEFT
  RIGHT
  INNER
  OUTER
}
